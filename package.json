{
	"name": "tiga-tpl",
	"displayName": "React, vue, svelte universal templates and fragments",
	"description": "Quickly generate common code snippets and modules",
	"publisher": "daiwei",
	"icon": "images/logo.png",
	"baseContentUrl": "./",
	"baseImagesUrl": "./images",
	"keywords": [
		"react template",
		"react snippets"
	],
	"version": "0.1.3",
	"engines": {
		"vscode": "^1.51.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/IFmiss/tiga-vscode-tpl"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:tiga-tpl.createReactFC",
		"onCommand:tiga-tpl.createReactCC",
		"onCommand:tiga-tpl.createVue2",
		"onCommand:tiga-tpl.createVue3",
		"onCommand:tiga-tpl.createSvelte3",
		"onCommand:tiga-tpl.createReactMiniProgramRCC",
		"onCommand:tiga-tpl.createReactMiniProgramRFC"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tiga-tpl.createReactFC",
				"title": "create React Function Component"
			},
			{
				"command": "tiga-tpl.createReactCC",
				"title": "create React Class Component"
			},
			{
				"command": "tiga-tpl.createVue2",
				"title": "create Vue 2 Component"
			},
			{
				"command": "tiga-tpl.createVue3",
				"title": "create Vue 3 Component"
			},
			{
				"command": "tiga-tpl.createSvelte3",
				"title": "create Svelte 3 Component"
			},
			{
				"command": "tiga-tpl.createReactMiniProgramRCC",
				"title": "create React CC for mini-program"
			},
			{
				"command": "tiga-tpl.createReactMiniProgramRFC",
				"title": "create React FC for mini-program"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "tiga-tpl.createReactFC",
					"alt": "tiga-tpl.createReactFC",
					"group": "1_modification@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createReactCC",
					"alt": "tiga-tpl.createReactCC",
					"group": "1_modification@2",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createVue2",
					"alt": "tiga-tpl.createVue2",
					"group": "1_modification@3",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createVue3",
					"alt": "tiga-tpl.createVue3",
					"group": "1_modification@4",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createSvelte3",
					"alt": "tiga-tpl.createSvelte3",
					"group": "1_modification@5",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createReactMiniProgramRCC",
					"alt": "tiga-tpl.createReactMiniProgramRCC",
					"group": "1_modification@6",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createReactMiniProgramRFC",
					"alt": "tiga-tpl.createReactMiniProgramRFC",
					"group": "1_modification@7",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"configuration": [{
			"type": "object",
			"title": "my plugin",
			"properties": {
				"tiga-tpl.name": {
					"type": "string",
					"default": "dw",
					"description": "your name"
				}
			}
		}]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"release": "vsce package && vsce publish"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.4",
		"@types/glob": "^7.1.3",
		"@types/inquirer": "^8.2.0",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/signale": "^1.4.4",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"@tiga-cli/tpl-core": "^0.0.50",
		"@tiga-cli/utils": "^0.0.50",
		"fs-extra": "^9.0.1",
		"readable-stream": "^3.6.0",
		"yocto-queue": "^0.1.0"
	}
}
