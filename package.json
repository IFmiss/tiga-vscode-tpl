{
	"name": "tiga-tpl",
	"displayName": "tiga-tpl",
	"description": "react template and snippets",
	"publisher": "daiwei",
	"icon": "images/tiga-tpl.png",
	"baseContentUrl": "./",
	"baseImagesUrl": "./images",
	"keywords": [
		"react template",
		"react snippets"
	],
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:tiga-tpl.createReactFC",
		"onCommand:tiga-tpl.createReactCC"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "javascriptreact",
				"path": "./src/snippets/tpl-react.json"
			},
			{
				"language": "javascript",
				"path": "./src/snippets/tpl-react.json"
			},
			{
				"language": "typescriptreact",
				"path": "./src/snippets/tpl-react-ts.json"
			},
			{
				"language": "typescript",
				"path": "./src/snippets/tpl-react-ts.json"
			}
		],
		"commands": [
			{
				"command": "tiga-tpl.createReactFC",
				"title": "新建ReactFC组件"
			},
			{
				"command": "tiga-tpl.createReactCC",
				"title": "新建ReactCC组件"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "tiga-tpl.createReactFC",
					"alt": "tiga-tpl.createReactFC",
					"group": "1_modification@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "tiga-tpl.createReactCC",
					"alt": "tiga-tpl.createReactCC",
					"group": "1_modification@2",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.4",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"fs-extra": "^9.0.1"
	}
}
